<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_menu">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_activity_menu" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/football"
            android:layout_width="168dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:onClick="pilihfootball"
            android:src="@drawable/football"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/basketball"
            android:layout_width="132dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:onClick="pilihbasket"
            android:src="@drawable/basketball"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.866"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tennis"
                android:layout_width="160dp"
                android:layout_height="87dp"
                android:layout_marginTop="136dp"
                android:onClick="pilihtennis"
                android:src="@drawable/tennis"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/badminton"
                android:layout_width="160dp"
                android:layout_height="87dp"
                android:layout_marginTop="136dp"
                android:onClick="pilihbdmntn"
                android:src="@drawable/badminton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:id="@+id/textfoot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="62dp"
                    android:text="@string/futsal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="34dp"
                    tools:layout_editor_absoluteY="60dp" />


                <TextView
                    android:id="@+id/textbasket"
                    android:layout_width="131dp"
                    android:layout_height="47dp"
                    android:layout_alignStart="@+id/texttennis"
                    android:layout_alignLeft="@+id/texttennis"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="144dp"
                    android:layout_marginLeft="144dp"
                    android:layout_marginTop="63dp"
                    android:text="BASKETBALL"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="198dp"
                    tools:layout_editor_absoluteY="60dp" />

                <TextView
                    android:id="@+id/texttennis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textfoot"
                    android:layout_alignLeft="@+id/textfoot"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="238dp"
                    android:text="TENNIS"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="45dp"
                    tools:layout_editor_absoluteY="229dp" />

                <TextView
                    android:id="@+id/textbdmntn"
                    android:layout_width="131dp"
                    android:layout_height="34dp"
                    android:layout_alignStart="@+id/texttennis"
                    android:layout_alignLeft="@+id/texttennis"
                    android:layout_alignBottom="@+id/textbasket"
                    android:layout_marginStart="149dp"
                    android:layout_marginLeft="149dp"
                    android:layout_marginBottom="-161dp"
                    android:text="BADMINTON"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="198dp"
                    tools:layout_editor_absoluteY="229dp" />

            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>




</android.support.design.widget.CoordinatorLayout>